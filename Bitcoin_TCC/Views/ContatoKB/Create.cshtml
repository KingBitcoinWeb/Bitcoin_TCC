@model Bitcoin_TCC.Models.ContatoKB

<!DOCTYPE html>

<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- awesone fonts css-->
    <link href="css/font-awesome.css" rel="stylesheet" type="text/css">
    <!-- owl carousel css-->
    <link rel="stylesheet" href="owl-carousel/assets/owl.carousel.min.css" type="text/css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <!-- custom CSS -->
    <link rel="stylesheet" href="css/style.css">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <title>KING BITCOIN</title>
    <style>
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light bg-transparent" id="gtco-main-nav">
        <div class="container">
            <a class="navbar-brand"> ENVIAR MENSAGEM </a>

        </div>
        <hr />
    </nav>
    <footer class="container-fluid" id="gtco-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-6" id="contact">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                        <input asp-for="Nome" class="form-control " placeholder="Full Name" style="margin-top: 10px" ; />
                        <span asp-validation-for="Nome" class="text-danger"></span>



                        <input asp-for="Email" class="form-control" placeholder="Email Address" style="margin-top: 10px" ; />
                        <span asp-validation-for="Email" class="text-danger"></span>

                        <textarea asp-for="Mensagem" class="form-control" placeholder="Message" style=" min-height: 200px; margin-top: 10px"> </textarea>
                        <span asp-validation-for="Mensagem" class="text-danger"></span>

                        <div class="form-group">
                            <input type="submit" value="Enviar" class="btn btn-default" style="margin-top: 20px;" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </footer>

    <a href="https://bitcoinking.azurewebsites.net/" class="submit-button"> VOLTAR <i class="fa fa-angle-right" aria-hidden="true"></i></a>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
